          {
            "arabic": "قلم",
            "english": "Pen",
            "transliteration": "qalam"
          },
          {
            "arabic": "هذا قلم.",
            "english": "This is a pen.",
            "transliteration": "Haadhā qalam."
          }
        ],
        "audioText": "قلم. هذا قلم."
      }
    },
